<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Nama</th>
      <th>Nama bank</th>
      <th>Nomor rekening</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% bank.forEach((item, index)=> { %>
      <tr>
        <td>
          <%= index + 1 %>
        </td>
        <td>
          <%= item.name %>
        </td>
        <td>
          <%= item.bankName %>
        </td>
        <td>
          <%= item.noRekening %>
        </td>
        <td>
          <form action="/bank/delete/<%= item.id %>?_method=DELETE" method="POST">
            <a href="/bank/edit/<%= item.id %>" class="btn btn-info btn-sm">
              <i class="fas fa-pencil-alt"></i>
              Edit</a>
            <button class="btn btn-danger btn-sm">
              <i class="fas fa-trash"></i>
              Hapus</button>
          </form>
        </td>
      </tr>
      <% }) %>
  </tbody>
</table>